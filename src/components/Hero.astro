---
import LinkButton from '../components/LinkButton.astro';
---
<section id="parallax-bg" class="relative text-white section-hero py-6 bg-cover bg-center flex flex-col justify-center items-center border-b border-[#727DA1]/20" style="background-image: url('/fire-flakes-overlay-1.jpg');">
    <div class="absolute inset-0 bg-black bg-opacity-10"></div>
    <div class="relative container mx-auto text-center mt-auto">
        <h1 class="text-5xl shadowEffect mb-4 font-display uppercase tracking-widest bg-gradient-to-r from-burnt-orange to-gold bg-clip-text text-transparent">
            Lucas
            Ferrero
        </h1>
        <p class="text-xl text-gray-400">Full Stack Developer</p>
    </div>
    <a class="relative mt-auto inline-flex items-center text-gray-400 hover:text-white border border-gray-800 hover:bg-gray-900 focus:ring-2 focus:outline-none focus:ring-gray-400 font-medium rounded-lg text-sm px-5 py-2.5 text-center" href="#">
        About me
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
    </a>
</section>

<style>
    .section-hero {
        min-height: calc(60vh - 60px);
    }
    .textGlow-1 {
        text-shadow: 0 0 10px #ff8c42, 0 0 20px #ff8c42, 0 0 30px #ffd700, 0 0 40px #ffd700;
    }
    .shadowEffect {
        text-shadow: -2px 4px 20px #ff8c42, -2px 4px 80px #ff8c42;
    }
</style>
